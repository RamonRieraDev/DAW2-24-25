package ejemplos;

public class Ejemplo08 {
// 
	public static void main(String[] args) {
	
		System.out.println("El 치rea del tri치ngulo es de " + area(10, 20));

	}

	// Devuelve el 치rea de un tri치ngulo con los argumentos de base y altura recibidos.
	static double area(double base, double altura) {
		
		return (base * altura) / 2;
		
	}
}
